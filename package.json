{
  "name": "comitto",
  "displayName": "Comitto",
  "description": "Automatisierte Git-Commits mit KI-generierten Commit-Nachrichten",
  "version": "1.3.0",
  "publisher": "tilltmk",
  "repository": {
    "type": "git",
    "url": "https://github.com/tilltmk/comitto"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "icon": "resources/comitto.png",
  "activationEvents": [
    "onStartupFinished",
    "onView:comitto-settings",
    "onView:comitto-status",
    "onView:comitto-quick-actions",
    "onCommand:comitto.enableAutoCommit",
    "onCommand:comitto.disableAutoCommit",
    "onCommand:comitto.toggleAutoCommit",
    "onCommand:comitto.performManualCommit"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist",
    "resources"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "comitto-sidebar",
          "title": "Comitto",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "comitto-sidebar": [
        {
          "id": "comitto-status",
          "name": "Status",
          "when": "workspaceHasGit"
        },
        {
          "id": "comitto-quick-actions",
          "name": "Schnellaktionen",
          "when": "workspaceHasGit"
        },
        {
          "id": "comitto-settings",
          "name": "Einstellungen",
          "when": "workspaceHasGit"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "comitto-status",
        "contents": "No Git repository found.\n[Initialize Git repository](command:git.init)",
        "when": "!workspaceHasGit"
      },
      {
        "view": "comitto-quick-actions",
        "contents": "No Git repository found.\n[Initialize Git repository](command:git.init)",
        "when": "!workspaceHasGit"
      },
      {
        "view": "comitto-settings",
        "contents": "No Git repository found.\n[Initialize Git repository](command:git.init)",
        "when": "!workspaceHasGit"
      }
    ],
    "commands": [
      {
        "command": "comitto.enableAutoCommit",
        "title": "Comitto: Enable Automatic Commits",
        "icon": "$(check)"
      },
      {
        "command": "comitto.disableAutoCommit",
        "title": "Comitto: Disable Automatic Commits",
        "icon": "$(circle-slash)"
      },
      {
        "command": "comitto.toggleAutoCommit",
        "title": "Comitto: Toggle Automatic Commits",
        "icon": "$(git-commit)"
      },
      {
        "command": "comitto.performManualCommit",
        "title": "Comitto: Perform Manual AI Commit",
        "icon": "$(git-commit)"
      },
      {
        "command": "comitto.refreshSettings",
        "title": "Comitto: Refresh Settings",
        "icon": "$(refresh)"
      },
      {
        "command": "comitto.openSettings",
        "title": "Comitto: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "comitto.showDashboard",
        "title": "Comitto: Show Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "comitto.configureAIProvider",
        "title": "Comitto: Configure AI Provider",
        "icon": "$(symbol-misc)"
      },
      {
        "command": "comitto.configureTriggers",
        "title": "Comitto: Configure Triggers",
        "icon": "$(settings-gear)"
      },
      {
        "command": "comitto.showSimpleUI",
        "title": "Comitto: Show Simple User Interface",
        "icon": "$(rocket)"
      },
      {
        "command": "comitto.stageAll",
        "title": "Comitto: Stage All Changes",
        "icon": "$(add)"
      },
      {
        "command": "comitto.stageSelected",
        "title": "Comitto: Stage Selected Files",
        "icon": "$(checklist)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "comitto.refreshSettings",
          "when": "view == comitto-settings",
          "group": "navigation"
        },
        {
          "command": "comitto.performManualCommit",
          "when": "view == comitto-status",
          "group": "navigation"
        },
        {
          "command": "comitto.showSimpleUI",
          "when": "view == comitto-status",
          "group": "navigation"
        },
        {
          "command": "comitto.showDashboard",
          "when": "view == comitto-quick-actions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "comitto.enableAutoCommit",
          "when": "viewItem == comitto-status-disabled",
          "group": "inline"
        },
        {
          "command": "comitto.disableAutoCommit",
          "when": "viewItem == comitto-status-enabled",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "comitto.showDashboard",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.configureAIProvider",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.configureTriggers",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.showSimpleUI",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.stageAll",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.stageSelected",
          "when": "workspaceHasGit"
        }
      ]
    },
    "configuration": {
      "title": "Comitto",
      "type": "object",
      "properties": {
        "comitto.autoCommitEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic commits"
        },
        "comitto.triggerRules": {
          "type": "object",
          "default": {
            "onSave": true,
            "onInterval": false,
            "onBranchSwitch": false,
            "fileCountThreshold": 3,
            "minChangeCount": 10,
            "timeThresholdMinutes": 30,
            "intervalMinutes": 15,
            "filePatterns": [
              "**/*"
            ],
            "specificFiles": []
          },
          "description": "Rules for triggering automatic commits"
        },
        "comitto.gitSettings": {
          "type": "object",
          "default": {
            "autoPush": false,
            "pushOptions": "",
            "pushRetryCount": 3,
            "pullBeforePush": true,
            "stageMode": "all",
            "specificStagingPatterns": [],
            "branch": "",
            "useGitignore": true,
            "commitMessageStyle": "conventional",
            "commitMessageLanguage": "en",
            "maxCommitAttempts": 3
          },
          "description": "Git settings for Comitto"
        },
        "comitto.aiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "ollama"
          ],
          "default": "openai",
          "description": "AI provider for commit message generation"
        },
        "comitto.openai": {
          "type": "object",
          "default": {
            "apiKey": "",
            "model": "gpt-3.5-turbo"
          },
          "description": "OpenAI API settings"
        },
        "comitto.ollama": {
          "type": "object",
          "default": {
            "endpoint": "http://localhost:11434/api/generate",
            "model": "llama3"
          },
          "description": "Ollama API settings",
          "properties": {
            "endpoint": {
              "type": "string",
              "default": "http://localhost:11434/api/generate",
              "description": "Endpoint for the Ollama API"
            },
            "model": {
              "type": "string",
              "default": "llama3",
              "description": "The Ollama model to use"
            }
          }
        },
        "comitto.ollama-model": {
          "type": "string",
          "default": "llama3",
          "description": "Abwärtskompatibilität für Ollama-Modell-Einstellung"
        },
        "comitto.anthropic": {
          "type": "object",
          "default": {
            "apiKey": "",
            "model": "claude-3-haiku-20240307"
          },
          "description": "Anthropic API settings"
        },
        "comitto.promptTemplate": {
          "type": "string",
          "default": "Generate a meaningful commit message in English following the Conventional Commits format or with a suitable emoji at the beginning.\nKeep it under 80 characters. Here are the changes:\n\n{changes}",
          "description": "Template for the AI prompt used to generate commit messages"
        },
        "comitto.uiSettings": {
          "type": "object",
          "default": {
            "simpleMode": false,
            "confirmBeforeCommit": true,
            "showNotifications": true,
            "theme": "auto"
          },
          "description": "UI settings for Comitto"
        },
        "comitto.notifications": {
          "type": "object",
          "default": {
            "onCommit": true,
            "onPush": true,
            "onError": true,
            "onTriggerFired": false
          },
          "description": "Notification settings"
        },
        "comitto.debug": {
          "type": "object",
          "default": {
            "enabled": false,
            "extendedLogging": false,
            "commitDiagnostics": false
          },
          "description": "Debug settings for Comitto"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "webpack --mode production",
    "webpack:dev": "webpack --mode development",
    "compile": "echo 'No compilation needed'",
    "lint": "echo 'No linting configured'",
    "test": "echo 'No tests configured'"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "axios": "^1.9.0",
    "ignore": "^5.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.70.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
