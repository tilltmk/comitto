{
  "name": "comitto",
  "displayName": "Comitto",
  "description": "Automatisierte Git-Commits mit KI-generierten Commit-Nachrichten",
  "version": "0.9.8",
  "publisher": "tilltmk",
  "repository": {
    "type": "git",
    "url": "https://github.com/tilltmk/comitto"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "icon": "resources/comitto.png",
  "activationEvents": [
    "onStartupFinished",
    "onView:comitto-settings",
    "onView:comitto-status",
    "onView:comitto-quick-actions",
    "onCommand:comitto.enableAutoCommit",
    "onCommand:comitto.disableAutoCommit",
    "onCommand:comitto.toggleAutoCommit",
    "onCommand:comitto.performManualCommit"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist",
    "resources"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "comitto-sidebar",
          "title": "Comitto",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "comitto-sidebar": [
        {
          "id": "comitto-status",
          "name": "Status",
          "when": "workspaceHasGit"
        },
        {
          "id": "comitto-quick-actions",
          "name": "Schnellaktionen",
          "when": "workspaceHasGit"
        },
        {
          "id": "comitto-settings",
          "name": "Einstellungen",
          "when": "workspaceHasGit"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "comitto-status",
        "contents": "Kein Git-Repository gefunden.\n[Git-Repository initialisieren](command:git.init)",
        "when": "!workspaceHasGit"
      },
      {
        "view": "comitto-quick-actions",
        "contents": "Kein Git-Repository gefunden.\n[Git-Repository initialisieren](command:git.init)",
        "when": "!workspaceHasGit"
      },
      {
        "view": "comitto-settings",
        "contents": "Kein Git-Repository gefunden.\n[Git-Repository initialisieren](command:git.init)",
        "when": "!workspaceHasGit"
      }
    ],
    "commands": [
      {
        "command": "comitto.enableAutoCommit",
        "title": "Comitto: Automatische Commits aktivieren",
        "icon": "$(check)"
      },
      {
        "command": "comitto.disableAutoCommit",
        "title": "Comitto: Automatische Commits deaktivieren",
        "icon": "$(circle-slash)"
      },
      {
        "command": "comitto.toggleAutoCommit",
        "title": "Comitto: Automatische Commits umschalten",
        "icon": "$(git-commit)"
      },
      {
        "command": "comitto.performManualCommit",
        "title": "Comitto: Manuellen KI-Commit ausführen",
        "icon": "$(git-commit)"
      },
      {
        "command": "comitto.refreshSettings",
        "title": "Comitto: Einstellungen aktualisieren",
        "icon": "$(refresh)"
      },
      {
        "command": "comitto.openSettings",
        "title": "Comitto: Einstellungen öffnen",
        "icon": "$(gear)"
      },
      {
        "command": "comitto.showDashboard",
        "title": "Comitto: Dashboard anzeigen",
        "icon": "$(dashboard)"
      },
      {
        "command": "comitto.configureAIProvider",
        "title": "Comitto: KI-Provider konfigurieren",
        "icon": "$(symbol-misc)"
      },
      {
        "command": "comitto.configureTriggers",
        "title": "Comitto: Trigger konfigurieren",
        "icon": "$(settings-gear)"
      },
      {
        "command": "comitto.showSimpleUI",
        "title": "Comitto: Einfache Benutzeroberfläche anzeigen",
        "icon": "$(rocket)"
      },
      {
        "command": "comitto.stageAll",
        "title": "Comitto: Alle Änderungen stagen",
        "icon": "$(add)"
      },
      {
        "command": "comitto.stageSelected",
        "title": "Comitto: Ausgewählte Dateien stagen",
        "icon": "$(checklist)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "comitto.refreshSettings",
          "when": "view == comitto-settings",
          "group": "navigation"
        },
        {
          "command": "comitto.performManualCommit",
          "when": "view == comitto-status",
          "group": "navigation"
        },
        {
          "command": "comitto.showSimpleUI",
          "when": "view == comitto-status",
          "group": "navigation"
        },
        {
          "command": "comitto.showDashboard",
          "when": "view == comitto-quick-actions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "comitto.enableAutoCommit",
          "when": "viewItem == comitto-status-disabled",
          "group": "inline"
        },
        {
          "command": "comitto.disableAutoCommit",
          "when": "viewItem == comitto-status-enabled",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "comitto.showDashboard",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.configureAIProvider",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.configureTriggers",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.showSimpleUI",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.stageAll",
          "when": "workspaceHasGit"
        },
        {
          "command": "comitto.stageSelected",
          "when": "workspaceHasGit"
        }
      ]
    },
    "configuration": {
      "title": "Comitto",
      "type": "object",
      "properties": {
        "comitto.autoCommitEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Automatische Commits aktivieren"
        },
        "comitto.triggerRules": {
          "type": "object",
          "default": {
            "onSave": true,
            "onInterval": false,
            "onBranchSwitch": false,
            "fileCountThreshold": 3,
            "minChangeCount": 10,
            "timeThresholdMinutes": 30,
            "intervalMinutes": 15,
            "filePatterns": [
              "**/*"
            ],
            "specificFiles": []
          },
          "description": "Regeln für den Auslöser von automatischen Commits"
        },
        "comitto.gitSettings": {
          "type": "object",
          "default": {
            "autoPush": false,
            "pushOptions": "",
            "pushRetryCount": 3,
            "pullBeforePush": true,
            "stageMode": "all",
            "specificStagingPatterns": [],
            "branch": "",
            "useGitignore": true,
            "commitMessageStyle": "conventional",
            "commitMessageLanguage": "en",
            "maxCommitAttempts": 3
          },
          "description": "Git-Einstellungen für Comitto"
        },
        "comitto.aiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "ollama"
          ],
          "default": "openai",
          "description": "KI-Provider für Commit-Nachrichtengenerierung"
        },
        "comitto.openai": {
          "type": "object",
          "default": {
            "apiKey": "",
            "model": "gpt-3.5-turbo"
          },
          "description": "OpenAI API-Einstellungen"
        },
        "comitto.ollama": {
          "type": "object",
          "default": {
            "endpoint": "http://localhost:11434/api/generate",
            "model": "llama3"
          },
          "description": "Ollama API-Einstellungen"
        },
        "comitto.anthropic": {
          "type": "object",
          "default": {
            "apiKey": "",
            "model": "claude-3-haiku-20240307"
          },
          "description": "Anthropic API-Einstellungen"
        },
        "comitto.promptTemplate": {
          "type": "string",
          "default": "Generiere eine aussagekräftige Commit-Nachricht auf Deutsch im Format der Conventional Commits oder mit einem passenden Emoji am Anfang.\nHalte sie unter 80 Zeichen. Hier sind die Änderungen:\n\n{changes}",
          "description": "Vorlage für den KI-Prompt zur Generierung der Commit-Nachricht"
        },
        "comitto.uiSettings": {
          "type": "object",
          "default": {
            "simpleMode": false,
            "confirmBeforeCommit": true,
            "showNotifications": true,
            "theme": "auto"
          },
          "description": "UI-Einstellungen für Comitto"
        },
        "comitto.notifications": {
          "type": "object",
          "default": {
            "onCommit": true,
            "onPush": true,
            "onError": true,
            "onTriggerFired": false
          },
          "description": "Benachrichtigungseinstellungen"
        },
        "comitto.debug": {
          "type": "object",
          "default": {
            "enabled": false,
            "extendedLogging": false,
            "commitDiagnostics": false
          },
          "description": "Debug-Einstellungen für Comitto"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "webpack --mode production",
    "webpack:dev": "webpack --mode development",
    "compile": "echo 'No compilation needed'",
    "lint": "echo 'No linting configured'",
    "test": "echo 'No tests configured'"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "axios": "^1.9.0",
    "ignore": "^5.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.70.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
